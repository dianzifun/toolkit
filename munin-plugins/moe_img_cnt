total.label total
total.draw LINE1
"""
    exit(0)


import sqlite3

DB_CONN = sqlite3.connect("/home/santa/moe_pictures/moe.sqlite3", 5)
c = DB_CONN.cursor()

total = 0
for set_name in ["danbooru", "danbooru_highres", "konachan", "konachan_highres", "moe_imouto", "moe_imouto_highres", "mypic", "nekobooru", "nekobooru_highres", "tu178"]:
    c.execute("select count(*) from images where set_name='%s'" % set_name)
    cnt = int(c.fetchone()[0])
    print "%s.value" % set_name, cnt
    total += cnt

print "total.value", total
c.close()

